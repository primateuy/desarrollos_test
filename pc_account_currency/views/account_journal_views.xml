<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_journal_form_inherit" model="ir.ui.view">
            <field name="name">account.journal.form.inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook" position='inside'>
                    <page name="account_by_currency" string="Currency accounts" invisible="type not in ('sale','purchase')">
                        <field name="account_currency_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="account_ids_domain" column_invisible="1"/>
                                <field name="currency_id"/>
                                <field name="account_id" domain="account_ids_domain"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
