<?xml version="1.0" encoding="utf-8"?>
<template>
	<t t-name="pos_all_in_one.RegisterPaymentPopupWidget" owl="1">
        <div class="popup">
            <header class="title drag-handle modal-header">
				<h4 class="modal-title">
					Register Payment
				</h4>
			</header>

            <main class="modal-body">
                <div class="body traceback" style="font-family: 'Lato-Reg';">
                    <p style="color: #875a7b;text-align: center;font-size: 20px;">Enter Details Here</p>
                    <div style="text-align: left;">
						<label style="text-align:left"> Payment Journal:  </label>
						<select id="payment_type" class='detail' name='type' style="height: 35px;width: 59%;float: right;   margin-right: 6%;">
							<t t-foreach='env.services.pos.account_journal' t-as='jrn' t-key='jrn.id'>
								<option t-att-value='jrn.id'> 
									<t t-out='jrn.name'/>
								</option>
							</t>
						</select>
					</div><br/>
					<div style="text-align: left;">
						<label style="text-align:left"> Amount:  </label><input id ="entered_amount" type="number" class="input-field" name="code" style="height: 35px;width: 59%;float: right;   margin-right: 6%;"></input>
					</div><br/>
					<div style="text-align: left;margin-top: 2%;">
						<label style="text-align:left"> Payment Note:  </label><input id ="entered_note" type="text" class="input-field" name="code" style="height: 35px;width: 59%;float: right;   margin-right: 6%;"></input>
					</div>
                </div>
            </main>

            <footer class="footer modal-footer">
				<div class="button confirm btn btn-lg btn-primary" t-on-click="register_payment">
					Apply
				</div>
				<div class="button cancel btn btn-lg btn-primary" t-on-click="cancel">
					Cancel
				</div>
			</footer>
        </div>
    </t>
</template>
