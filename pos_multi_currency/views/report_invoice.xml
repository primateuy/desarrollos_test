<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


           <template id="pos_multi_currency.document_tax_totals">

            <t t-foreach="custom_tax_totals['subtotals']" t-as="custom_subtotal">
                <tr class="border-black o_subtotal">
                    <td><strong t-esc="custom_subtotal['name']"/></td>

                    <td class="text-end">
                        <span
                            t-att-class="oe_subtotal_footer_separator"
                            t-esc="custom_subtotal['formatted_amount']"
                        />
                    </td>
                </tr>

                <t t-set="subtotal_to_show" t-value="custom_subtotal['name']"/>
                <t t-call="account.tax_groups_totals"/>
            </t>

            <t t-if="'formatted_rounding_amount' in custom_tax_totals and custom_tax_totals['rounding_amount'] != 0">
                <td>Rounding</td>
                <td class="text-end">
                    <span t-esc="custom_tax_totals['formatted_rounding_amount']"/>
                </td>
            </t>

            <!--Total amount with all taxes-->
            <tr class="border-black o_total">
                <td><strong>Total</strong></td>
                <td  class="text-end">
                    <span t-esc="custom_tax_totals['formatted_amount_total_rounded']" t-if="'formatted_amount_total_rounded' in custom_tax_totals"/>
                    <span t-esc="custom_tax_totals['formatted_amount_total']" t-else=""/>
                </td>
            </tr>
        </template>

        <template id="report_invoice_document" inherit_id="account.report_invoice_document">
            <xpath expr="//t[@name='account_invoice_line_accountable']//td[3]" position="replace">
                <td t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                    <span class="text-nowrap" t-field="line.custom_price_unit"/>
                </td>
            </xpath>

            <xpath expr="//t[@name='account_invoice_line_accountable']//td[6]" position="replace">
            <td class="text-end o_price_total">
                <span class="text-nowrap" t-field="line.custom_price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                <span class="text-nowrap" t-field="line.custom_price_total" groups="account.group_show_line_subtotals_tax_included"/>
            </td>
            </xpath>



            <xpath expr="//t[@t-call='account.document_tax_totals']" position="replace">
                <t t-set="custom_tax_totals" t-value="o.custom_tax_totals"/>
                <t t-call="pos_multi_currency.document_tax_totals"/>
            </xpath>


            <xpath expr="//t[@t-if='print_with_payments']" position="replace">
                <t t-if="print_with_payments">
                    <t t-if="o.payment_state != 'invoicing_legacy'">
                        <t t-set="payments_vals" t-value="o.sudo().custom_invoice_payments_widget and o.sudo().custom_invoice_payments_widget['content'] or []"/>
                        <t t-foreach="payments_vals" t-as="payment_vals">
                            <tr t-if="payment_vals['is_exchange'] == 0">
                                <td>
                                    <i class="oe_form_field text-end oe_payment_label">Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                                </td>
                                <td class="text-end">
                                    <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.custom_currency_id}'/>
                                </td>
                            </tr>
                        </t>
                        <t t-if="len(payments_vals) > 0">
                            <tr class="border-black fw-bold">
                                <td>Amount Due</td>
                                <td class="text-end">
                                    <span t-field="o.custom_amount_residual" t-options='{"widget": "monetary", "display_currency": o.custom_currency_id}'/>
                                </td>
                            </tr>
                            </t>
                        </t>
                    </t>
            </xpath>

        </template>









    </data>
</odoo>
