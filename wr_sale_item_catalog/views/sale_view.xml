<odoo>
    <data>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@name='order_lines']/field[@name='order_line']/tree/control/create[@name='add_note_control']"
                       position="after">
                    <button name="action_add_from_sale_catalog" string="Catalog" type="object" class="px-4 btn-link"
                            context="{'order_id': parent.id}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>