<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_order_view_form" model="ir.ui.view">
            <field name="name">pos.order.form.view</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_ids']/tree/field[@name='amount']" position="after">
                    <field name = "amount_currency" groups="base.group_multi_currency" invisible="1"/>
                    <field name = "currency" groups="base.group_multi_currency" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
